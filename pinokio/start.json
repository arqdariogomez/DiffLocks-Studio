{
  "daemon": true,
  "run": [
    {
      "method": "shell.run",
      "params": {
        "venv": "venv",
        "path": "app",
        "message": "python app.py",
        "on": [
          {
            "event": "/Running on.*(http:\\S+)/",
            "done": true
          }
        ]
      }
    }
  ]
}