{
  "run": [
    {
      "method": "shell.run",
      "params": {
        "message": "pip install -r requirements-pinokio.txt",
        "venv": "venv",
        "path": "."
      }
    },
    {
      "method": "script.start",
      "params": {
        "uri": "torch.js",
        "params": {
          "venv": "venv",
          "path": "."
        }
      }
    },
    {
      "method": "input",
      "params": {
        "title": "HuggingFace Token",
        "description": "Enter your HF Token to download checkpoints (Required for gated repos). Leave empty if public/already set.",
        "form": [
          {
            "key": "HF_TOKEN",
            "type": "password",
            "placeholder": "hf_..."
          }
        ]
      }
    },
    {
      "method": "shell.run",
      "params": {
        "venv": "venv",
        "path": ".",
        "message": "python download_checkpoints.py",
        "env": {
          "HF_TOKEN": "{{input.HF_TOKEN}}"
        }
      }
    },
    {
      "method": "notify",
      "params": {
        "html": "\u2705 DiffLocks Studio installed successfully!"
      }
    }
  ]
}