{
  "run": [
    {
      "method": "shell.run",
      "params": {
        "message": "git clone https://github.com/arqdariogomez/DiffLocks-Studio.git app",
        "path": "."
      }
    },
    {
      "method": "script.start",
      "params": {
        "uri": "torch.js",
        "params": {
          "venv": "venv",
          "path": "app"
        }
      }
    },
    {
      "method": "shell.run",
      "params": {
        "venv": "venv",
        "path": "app",
        "message": "pip install -r requirements-pinokio.txt"
      }
    },
    {
      "method": "shell.run",
      "params": {
        "venv": "venv",
        "path": "app",
        "message": "python download_checkpoints.py",
        "env": {
          "HF_TOKEN": "{{env.HF_TOKEN}}"
        }
      }
    },
    {
      "method": "notify",
      "params": {
        "html": "\u2705 DiffLocks Studio installed successfully!<br>Don't forget to set HF_TOKEN in Pinokio settings if you haven't already."
      }
    }
  ]
}