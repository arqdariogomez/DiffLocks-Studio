{
  "run": [
    {
      "method": "notify",
      "params": {
        "html": "ðŸš€ Starting DiffLocks Studio installation..."
      }
    },
    {
      "method": "script.start",
      "params": {
        "uri": "torch.js",
        "params": {
          "venv": "venv",
          "path": "."
        }
      }
    },
    {
      "method": "shell.run",
      "params": {
        "message": "pip install -r requirements-pinokio.txt",
        "venv": "venv",
        "path": "."
      }
    },
    {
      "method": "input",
      "params": {
        "title": "Credentials (Optional)",
        "description": "Enter credentials for automated asset downloads. Meshcapade is required for the main models.",
        "form": [
          {
            "key": "HF_TOKEN",
            "title": "HuggingFace Token",
            "type": "password",
            "placeholder": "hf_..."
          },
          {
            "key": "MESH_USER",
            "title": "Meshcapade Email",
            "type": "text",
            "placeholder": "your@email.com"
          },
          {
            "key": "MESH_PASS",
            "title": "Meshcapade Password",
            "type": "password"
          }
        ]
      }
    },
    {
      "method": "shell.run",
      "params": {
        "venv": "venv",
        "path": ".",
        "message": "python download_checkpoints.py",
        "env": {
          "HF_TOKEN": "{{input.HF_TOKEN}}",
          "MESH_USER": "{{input.MESH_USER}}",
          "MESH_PASS": "{{input.MESH_PASS}}"
        }
      }
    },
    {
      "method": "notify",
      "params": {
        "html": "âœ… DiffLocks Studio installed successfully! Click 'Start' in the menu."
      }
    }
  ]
}